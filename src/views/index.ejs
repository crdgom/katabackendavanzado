<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Autos view</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <h1>Lista de Autos</h1>

    <!--  create a car card for each car, using the data from the database and including the brand name -->
    <% autos.forEach(auto => { %>
        <section>
            <div>
                <h2><%= auto.brand ? auto.brand.brand : 'N/A'  %></h2>
                <ul>
                    <li>Brand: <%= auto.model %></li>
                    <li>Branch: <%= auto.brand ? auto.brand.branch : 'N/A' %></li>
                    <li>Country: <%= auto.brand ? auto.brand.country : 'N/A' %></li>
                    <li>Price: <%= auto.price %></li>
                </ul>
            </div>
        </section>
    <% }); %>
    
</body>
</html>